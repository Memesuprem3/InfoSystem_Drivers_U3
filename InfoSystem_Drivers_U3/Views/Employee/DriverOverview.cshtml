@{
    ViewData["Title"] = "Employee Översikt";
}

<h2>Employee Översikt</h2>

<p>Välkommen, @User.Identity.Name!</p>

<p>Här kan du hantera förare och deras händelser.</p>

<div class="list-group mt-4">
    <a asp-controller="Driver" asp-action="Index" class="list-group-item list-group-item-action">Visa och Hantera Förare</a>
    <a asp-controller="Event" asp-action="GetNotifications" class="list-group-item list-group-item-action">Visa Senaste Notifikationer</a>
    <a asp-controller="Event" asp-action="Create" class="list-group-item list-group-item-action">Lägg till Händelse</a>
</div>