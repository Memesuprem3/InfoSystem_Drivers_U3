@model IEnumerable<U3_Infosystem_ASP.NET.Models.Event>
@{
    ViewData["Title"] = "Senaste Händelser";
}

<h2>Notifieringar - Senaste Händelser</h2>

<table class="table">
    <tr>
        <th>Förare</th>
        <th>Datum</th>
        <th>Beskrivning</th>
        <th>Belopp In</th>
        <th>Belopp Ut</th>
    </tr>
    @foreach (var eventItem in Model)
    {
        <tr>
            <td>@eventItem.Driver.DriverName</td>
            <td>@eventItem.NoteDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@eventItem.NoteDescription</td>
            <td>@eventItem.BeloppIn</td>
            <td>@eventItem.BeloppUt</td>
        </tr>
    }
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tillbaka till Översikt</a>