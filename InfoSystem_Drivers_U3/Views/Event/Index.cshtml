@model IEnumerable<InfoSystem_Drivers_U3.Models.Driver>

<h2>Förare</h2>

<form method="get" asp-action="Index">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Sök efter förarnamn" />
        <button type="submit" class="btn btn-primary mt-2">Sök</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Registreringsnummer</th>
            <th>Ansvarig</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var driver in Model)
        {
            <tr>
                <td>@driver.DriverName</td>
                <td>@driver.CarReg</td>
                <td>@driver.ResponsibleEmployee</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@driver.DriverID" class="btn btn-warning">Redigera</a>
                    <a asp-action="Delete" asp-route-id="@driver.DriverID" class="btn btn-danger">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary mt-3">Lägg till ny förare</a>